@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "e926 Viewer (Seguro)";
}

<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@title</title>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
<header class="border-bottom mb-3">
  <nav class="navbar navbar-expand-lg navbar-light bg-light container">
    <a class="navbar-brand fw-bold" asp-controller="Posts" asp-action="Index">e926 Viewer</a>
    <form class="d-flex ms-auto" asp-controller="Posts" asp-action="Index" method="get">
      <input class="form-control me-2" type="search" name="q" value="@(ViewData["Query"] ?? "")" placeholder="tags (ej: wolf smile)">
      <button class="btn btn-outline-primary" type="submit">Buscar</button>
    </form>
  </nav>
</header>

<main class="container">
  @RenderBody()
</main>

<footer class="border-top mt-4 py-3 text-center text-muted">
  <small>Solo contenido **rating:s** y tags filtrados para <13.</small>
</footer>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>
